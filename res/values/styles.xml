<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#e51c23</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="separatorText">
        <item name="android:textColor">#e84e40</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="textLarge">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="subTitle">
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="textSmall">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textCredits">
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
